@page "/Calificacion"

<h1>Cálculo de la menor calificación en un arreglo jagged</h1>

<p>La menor calificación es: @menorCalificacion</p>

@code {
    private int menorCalificacion;
    private int[][] matriz = new int[][]
    {
        new int[] {90, 80, 70},
        new int[] {60, 50, 40, 30},
        new int[] {20, 10}
    };

    protected override void OnInitialized()
    {
        CalcularMenorCalificacion();
    }

    private void CalcularMenorCalificacion()
    {
        menorCalificacion = int.MaxValue;
        foreach (var subMatriz in matriz)
        {
            foreach (var valor in subMatriz)
            {
                menorCalificacion = Math.Min(menorCalificacion, valor);
            }
        }
    }
}
